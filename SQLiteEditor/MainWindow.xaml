<Window x:Class="SQLiteEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Path=AppTitle}"
        Height="600"
        Width="800" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="#CFFFFFFF" BorderThickness="1" BorderBrush="LightGray" ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="45"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Padding="5,0" Text="{Binding Path=AppTitle}"/>
            <Button Grid.Column="1" Click="MinimizeClick" Background="Transparent" Foreground="Gray" BorderBrush="Transparent" Content="ー"/>
            <Button Grid.Column="2" Click="MaximizeClick" Background="Transparent" Foreground="Gray" BorderBrush="Transparent" Content="□"/>
            <Button Grid.Column="3" Click="CloseClick" Background="Transparent" Foreground="Gray" BorderBrush="Transparent" Content="✕"/>
        </Grid>
        
        <!-- メニュー -->
        <Menu Grid.Row="1" Background="White">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="DBファイル指定(_S)" Click="SelectFilePath_Click"/>
                <MenuItem Header="DBファイル指定解除(_C)" Click="ClearFilePath_Click"/>
                <MenuItem Header="DBパスワード(_P)" Click="Password_Click" x:Name="PasswordMenu"/>
                <MenuItem Header="終了(_X)" Click="Shutdown_Click"/>
            </MenuItem>
            <MenuItem Header="新規ウインドウ(_N)" Click="NewWindow_Click"/>
            <MenuItem Header="情報(_I)">
                <MenuItem Header="テーブル一覧(_L)" Click="ShowTableList_Click"/>
                <MenuItem Header="テーブル定義一覧(_D)" Click="ShowTableDefinitions_Click"/>
                <Separator/>
                <MenuItem Header="トリガー一覧(_T)" Click="ShowTriggerList_Click"/>
                <MenuItem Header="トリガー定義一覧(_T)" Click="ShowTriggerDefinitions_Click"/>
            </MenuItem>
            <MenuItem Header="SQL実行(_E)" Click="Execute_Click"/>
        </Menu>

        <!-- SQL入力 -->
        <TextBox Grid.Row="2" x:Name="SqlStmt" Text="{Binding Path=SqlStmt, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 FontFamily="MS Gothic" Padding="5,5,0,0"
                 Background="Transparent" Foreground="Black" FontSize="14"
                 PreviewKeyDown="SqlStmt_PreviewKeyDown"/>

        <!-- スプリッター -->
        <GridSplitter Grid.Row="3" Background="White"
                      Height="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                      ResizeDirection="Rows"/>

        <!-- 結果表示 -->
        <DataGrid Grid.Row="4" ItemsSource="{Binding DataList}"
                  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                  Background="Transparent"
                  RowBackground="Transparent"
                  Foreground="Black"
                  CanUserAddRows="False" 
                  AutoGenerateColumns="True"
                  VerticalGridLinesBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                  HorizontalGridLinesBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" 
                  >
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="BorderBrush" Value="LightGray"/>
                    <Setter Property="Padding" Value="2,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="5" Background="Transparent">
            <StatusBarItem>
                <TextBlock Text="{Binding Path=StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding Path=SqlExecuted}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
