<Window x:Class="SQLiteEditor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteEditor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="AboutWindow" Height="150" Width="230">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label x:Name="AppTitle" HorizontalAlignment="Center" Padding="0" FontSize="15" Content="AppTitle"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label FontSize="13" Padding="0" Content="Version"/>
            <Grid Width="5"/>
            <Label x:Name="AppVersion" FontSize="13" Padding="0" Content="0.0.0.0"/>
        </StackPanel>
        <Grid Height="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Padding="0" FontSize="12" Content="by"/>
            <Grid Width="5"/>
            <Label x:Name="AppAuthor" HorizontalAlignment="Center" Padding="0" FontSize="12" Content="tanno-seiichi"/>
        </StackPanel>
        <Grid Height="2"/>
        <Label x:Name="AppCopyright" HorizontalAlignment="Center" Padding="0" FontSize="11" Content="Copyright"/>
    </StackPanel>
</Window>
